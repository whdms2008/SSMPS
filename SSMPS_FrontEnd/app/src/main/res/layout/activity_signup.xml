<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="380dp"
        android:layout_marginLeft="15dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/logo" />

    <TextView
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:text="회원가입"
        android:textColor="#000000 "
        android:textSize="30dp"
        android:textStyle="bold|italic" />

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="#EEEEEE"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/join_id"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:height="50dp"
            android:background="@null"
            android:layout_marginLeft="20dp"
            android:hint="아이디를 입력해 주세요" />
    </LinearLayout>

    <LinearLayout
        android:background="#EEEEEE"
        android:layout_width="350dp"
        android:layout_gravity="center"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/join_password"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:background="@null"
            android:hint="비밀번호를 입력해 주세요"
            android:layout_marginLeft="20dp"
            android:inputType="textPassword"/>
    </LinearLayout>

    <LinearLayout
        android:background="#EEEEEE"
        android:layout_width="350dp"
        android:layout_gravity="center"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/join_password_check"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:background="@null"
            android:hint="비밀번호 확인"
            android:layout_marginLeft="20dp"
            android:inputType="textPassword"/>
    </LinearLayout>

    <TextView
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:text="상세정보"
        android:textColor="#000000 "
        android:textSize="30dp"
        android:textStyle="bold|italic" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/joinStoreList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="10dp"
                    android:background="#EEEEEE"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/join_store_name"
                        android:layout_width="200dp"
                        android:background="@null"
                        android:gravity="center"
                        android:hint="가게 이름을 입력해 주세요"
                        android:layout_height="58dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:background="#EEEEEE"
                    android:layout_marginTop="14dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/join_store_address"
                        android:layout_width="200dp"
                        android:background="@null"
                        android:hint="가게 주소를 입력해 주세요"
                        android:layout_height="58dp"/>

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/join_store_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="35dp"
                android:backgroundTint="#EEEEEE"
                android:text="➕" />

        </LinearLayout>

    </HorizontalScrollView>

    <Button
        android:id="@+id/join_join_btn"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginTop="35dp"
        android:text="가입하기"
        android:textSize="18dp"
        android:textStyle="bold"
        android:backgroundTint="#394867"
        android:textColor="#ffffff"
        android:layout_gravity="center"/>

</LinearLayout>